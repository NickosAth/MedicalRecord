<!DOCTYPE html>
<html>
<head>
    <title>Medical History</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f4f8;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 600px;
            margin: 40px auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

        label {
            font-weight: bold;
        }

        .info-group {
            margin-bottom: 15px;
            padding: 10px;
            background-color: #f8f8f8;
            border-radius: 5px;
            border: 1px solid #e0e0e0;
            color: #555;
        }

            .info-group label {
                margin-bottom: 5px;
                display: block;
            }

            .info-group span {
                font-weight: normal;
                color: #777;
            }

        .form-group {
            margin-bottom: 20px;
        }

        input[type="text"],
        textarea,
        input[type="datetime-local"] {
            width: 100%;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
        }

        textarea {
            resize: vertical;
        }

        .btn-container {
            text-align: center;
        }

        .btn {
            padding: 10px 20px;
            background-color: #007bff;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

            .btn:hover {
                background-color: #0056b3;
            }

        .timestamp-btn {
            background-color: #17a2b8;
            color: white;
            border: none;
            border-radius: 5px;
            padding: 5px 10px;
            cursor: pointer;
            height: 48px; /* Adjust the height to match the field */
        }

        .timestamp-container {
            display: flex;
            align-items: center;
        }
    </style>
</head>
<body>
    <div class="container">
        <h2>Medical History</h2>

        <!-- Display medical history information here -->
        <div class="form-group">
            <label for="vaccines">Vaccines:</label>
            <textarea id="vaccines" rows="4" placeholder="Enter vaccines...">@Model.Vaccines</textarea>
        </div>

        <div class="form-group">
            <label for="diagnosis">Diagnosis:</label>
            <textarea id="diagnosis" rows="4" placeholder="Enter diagnosis...">@Model.Diagnosis</textarea>
        </div>

        <div class="form-group">
            <label for="treatment">Treatment:</label>
            <textarea id="treatment" rows="4" placeholder="Enter treatment...">@Model.Treatment</textarea>
        </div>

        <div class="form-group">
            <label>Visit Date/Time:</label>
            <div class="timestamp-container">
                <input type="text" id="visitDateTime" readonly value="@Model.VisitDateTime">
            </div>
        </div>
    </div>

    <script>
        document.getElementById('addTimestampBtn').addEventListener('click', function () {
            const now = new Date();
            const year = now.getFullYear();
            const month = String(now.getMonth() + 1).padStart(2, '0');
            const day = String(now.getDate()).padStart(2, '0');
            const hours = String(now.getHours()).padStart(2, '0');
            const minutes = String(now.getMinutes()).padStart(2, '0');
            const formattedDateTime = `${year}-${month}-${day} ${hours}:${minutes}`;
            document.getElementById('visitDateTime').value = formattedDateTime;
        });
    </script>
</body>
</html>






