@model MedicalRecord.Models.Client

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f4f8;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 600px;
            margin: 40px auto;
            padding: 20px;
            background-color: #ffffff;
            border-radius: 8px;
            box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

        label {
            font-weight: bold;
        }

        .info-group {
            margin-bottom: 15px;
            padding: 10px;
            background-color: #f8f8f8;
            border-radius: 5px;
            border: 1px solid #e0e0e0;
            color: #555;
        }

        .btn-container {
            text-align: center;
            margin-top: 20px;
        }

        .btn {
            padding: 6px 20px;
            margin: 5px;
            cursor: pointer;
            border: none;
            border-radius: 3px;
            font-size: 14px;
            transition: background-color 0.3s ease;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

        .btn-success {
            background-color: #28a745;
            color: white;
        }

        input {
            width: 100%;
            padding: 6px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .edit-mode input {
            display: inline-block;
        }

        .edit-mode span {
            display: none;
        }
    </style>
    <title>Client Medical History</title>
</head>
<body>
    <div class="container">
        <h2>Client Medical History</h2>
        <div class="info-group">
            <label>First Name:</label>
            <span>@Model.FirstName</span>
            <input type="text" id="firstNameInput" value="@Model.FirstName" class="edit-mode" disabled />
        </div>
        <div class="info-group">
            <label>Last Name:</label>
            <span>@Model.LastName</span>
            <input type="text" id="lastNameInput" value="@Model.LastName" class="edit-mode" disabled />
        </div>
        <div class="info-group">
            <label>Vaccines:</label>
            <span>@Model.Vaccines</span>
            <input type="text" id="vaccinesInput" value="@Model.Vaccines" class="edit-mode" disabled />
        </div>
        <div class="info-group">
            <label>Diagnosis:</label>
            <span>@Model.Diagnosis</span>
            <input type="text" id="diagnosisInput" value="@Model.Diagnosis" class="edit-mode" disabled />
        </div>
        <div class="info-group">
            <label>Treatment:</label>
            <span>@Model.Treatment</span>
            <input type="text" id="treatmentInput" value="@Model.Treatment" class="edit-mode" disabled />
        </div>
        <div class="info-group">
            <label>Visit Date/Time:</label>
            <span>@Model.VisitDateTime</span>
            <input type="text" id="visitDateTimeInput" value="@Model.VisitDateTime.ToString()" class="edit-mode" disabled />
        </div>
        <div class="btn-container">
            <button class="btn btn-primary" id="editButton">Edit</button>
            <button class="btn btn-success" id="saveButton" style="display:none;">Save</button>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#editButton").click(function () {
                $(".edit-mode").prop("disabled", false);
                $("span").hide();
                $("#editButton").hide();
                $("#saveButton").show();
            });

            $("#saveButton").click(function () {
                var updatedClient = {
                    Id: @Model.Id,
                    FirstName: $("#firstNameInput").val(),
                    LastName: $("#lastNameInput").val(),
                    Vaccines: $("#vaccinesInput").val(),
                    Diagnosis: $("#diagnosisInput").val(),
                    Treatment: $("#treatmentInput").val(),
                    VisitDateTime: $("#visitDateTimeInput").val()
                };

                $.ajax({
                    type: "POST",
                    url: "@Url.Action("Update", "MedicalHistory")",
                    data: updatedClient,
                    success: function () {
                        $(".edit-mode").prop("disabled", true);
                        $("span").show();
                        $("#editButton").show();
                        $("#saveButton").hide();
                        alert("Client information updated successfully.");

                        // Reload the page to reflect the updated information
                        location.reload();
                    },
                    error: function () {
                        alert("Failed to update client information.");
                    }
                });
            });
        });
    </script>
</body>
</html>
