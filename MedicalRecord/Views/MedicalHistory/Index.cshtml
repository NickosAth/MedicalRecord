<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-image: url('https://www.verywellhealth.com/thmb/tX0Pw6GQ5kY_38PUlsJLd1w6KFk=/1500x0/filters:no_upscale():max_bytes(150000):strip_icc()/GettyImages-85775470-568728a05f9b586a9e3eafb0.jpg'); /* Replace with your background image URL */
            background-size: cover;
            background-repeat: no-repeat;
            margin: 0;
            padding: 0;
        }

        .container.main-container {
            max-width: 600px;
            margin: 40px auto;
            padding: 20px;
            background-color: rgba(255, 255, 255, 0.9);
            border-radius: 8px;
            box-shadow: 0px 2px 10px rgba(0, 0, 0, 0.1);
        }

        .container {
            max-width: 600px;
            margin: 40px auto;
            padding: 20px;
            background-color: rgba(255, 255, 255, 0.9); /* Add some transparency to the background */
            border-radius: 8px;
        }

        h2 {
            text-align: center;
            margin-bottom: 20px;
            color: #333;
        }

        label {
            font-weight: bold;
        }

        .info-group {
            margin-bottom: 15px;
            padding: 10px;
            background-color: rgba(248, 248, 248, 0.8); /* Add transparency to info boxes */
            border-radius: 5px;
            border: 1px solid #e0e0e0;
            color: #555;
        }

        .btn-container {
            text-align: center;
            margin-top: 20px;
        }

        .btn {
            padding: 6px 20px;
            margin: 5px;
            cursor: pointer;
            border: none;
            border-radius: 3px;
            font-size: 14px;
            transition: background-color 0.3s ease;
        }

        .btn-primary {
            background-color: #007bff;
            color: white;
        }

        .btn-success {
            background-color: #28a745;
            color: white;
        }

        input {
            width: 100%;
            padding: 6px;
            border: 1px solid #ccc;
            border-radius: 4px;
        }

        .edit-mode input {
            display: inline-block;
        }

        /* Add backdrop-filter to blur the background image */
        .background-blur {
            backdrop-filter: blur(10px); /* Adjust the blur amount as needed */
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
        }
    </style>
    <title>Client Medical History</title>
</head>
<body>
    <div class="background-blur"></div>

    <div class="container main-container">
        <h2>Client Medical History</h2>
        <div class="info-group">
            <label for="firstNameInput">First Name:</label>
            <input type="text" id="firstNameInput" value="@Model.FirstName" class="edit-mode" disabled />
        </div>
        <div class="info-group">
            <label for="lastNameInput">Last Name:</label>
            <input type="text" id="lastNameInput" value="@Model.LastName" class="edit-mode" disabled />
        </div>
        <div class="info-group">
            <label for="vaccinesInput">Vaccines:</label>
            <input type="text" id="vaccinesInput" value="@Model.Vaccines" class="edit-mode" disabled />
        </div>
        <div class="info-group">
            <label for="diagnosisInput">Diagnosis:</label>
            <input type="text" id="diagnosisInput" value="@Model.Diagnosis" class="edit-mode" disabled />
        </div>
        <div class="info-group">
            <label for="treatmentInput">Treatment:</label>
            <input type="text" id="treatmentInput" value="@Model.Treatment" class="edit-mode" disabled />
        </div>
        <div class="info-group">
            <label for="visitDateTimeInput">Visit Date/Time:</label>
            <input type="text" id="visitDateTimeInput" value="@Model.VisitDateTime.ToString()" class="edit-mode" disabled />
        </div>
        <div class="btn-container">
            <button class="btn btn-primary" id="editButton">Edit</button>
            <button class="btn btn-success" id="saveButton" style="display:none;">Save</button>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#editButton").click(function () {
                $(".edit-mode").prop("disabled", false);
                $("#firstNameInput").prop("readonly", true); 
                $("#lastNameInput").prop("readonly", true); 
                $("#visitDateTimeInput").prop("readonly", true); 
                $("#editButton").hide();
                $("#saveButton").show();
            });

            $("#saveButton").click(function () {
                var updatedClient = {
                    Id: @Model.Id,
                    FirstName: $("#firstNameInput").val(),
                    LastName: $("#lastNameInput").val(),
                    Vaccines: $("#vaccinesInput").val(),
                    Diagnosis: $("#diagnosisInput").val(),
                    Treatment: $("#treatmentInput").val(),
                    VisitDateTime: $("#visitDateTimeInput").val()
                };

                $.ajax({
                    type: "POST",
                    url: "@Url.Action("Update", "MedicalHistory")",
                    data: updatedClient,
                    success: function () {
                        $(".edit-mode").prop("disabled", true);
                        $("#visitDateTimeInput").prop("readonly", false); // Remove read-only when leaving edit mode
                        $("#editButton").show();
                        $("#saveButton").hide();
                        alert("Client information updated successfully.");

                        // Reload the page to reflect the updated information
                        location.reload();
                    },
                    error: function () {
                        alert("Failed to update client information.");
                    }
                });
            });
        });
    </script>
</body>
</html>
